@model IEnumerable<WalmartPro.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h1>Sellers</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SellerFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellerLastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellerEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SellerUsername)
            </th>
           @*  <th>
                @Html.DisplayNameFor(model => model.SellerPassword)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.SellerMobileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
           @*  <th>
                @Html.DisplayNameFor(model => model.LastLoginDate)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SellerFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SellerUsername)
            </td>
         @*    <td>
                @Html.DisplayFor(modelItem => item.SellerPassword)
            </td> *@
            <td>
                +@Html.DisplayFor(modelItem => item.SellerMobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegistrationDate)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.LastLoginDate)
            </td> *@
            <td>
                <a asp-action="Edit" asp-route-id="@item.SellerId" class="btn btn-secondary">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.SellerId" class="btn btn-success">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.SellerId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
